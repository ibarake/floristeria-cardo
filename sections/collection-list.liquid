<section class="full-width bg-dark relative">
  <flor class="absolute collection-flor-2">
    {% render 'flor-collection-list-2' %}
  </flor>
  <flor class="absolute collection-flor">
    {% render 'flor-collection-list' %}
  </flor>
<collection-list class="page-width">
  <collection-title>
    <collection-text>
      <h4 class="subtitulo-2 collection-subtitle">{{ section.settings['subtitle-text'] }}</h4>
      <h2 class="titulo-2 collection-title">{{ section.settings['title-text'] }}</h2>
    </collection-text>
    <collection-subtext>
      <p class="parrafo-1 collection-description"><br>{{ section.settings['p-text'] }}</p>
    </collection-subtext>
    <collection-button>
      <a class="cta-3 subtitulo-3">{{ section.settings['cta-3'] }}</a>
    </collection-button>
  </collection-title>
    <collection-slider class="drag-scroll">
      {% for collection in section.settings.collection_list %}
        <a class="collection-item" href="{{ collection.url }}">
          {% include 'collection-card', collection: collection %}
        </a>
      {% endfor %}
    </collection-slider>
  <a class="cta-3-responsive subtitulo-3">{{ section.settings['cta-3'] }}</a>
</collection-list>
</section>

{% schema %}
  {
    "name": "Section name",
    "settings": [
      {
        "type":"text",
        "id": "subtitle-text",
        "label": "Subtitle text",
        "default": "Categorias"
      },
      {
        "type":"text",
        "id": "title-text",
        "label": "Title text",
        "default": "Encuentra el regalo ideal"
      },
      {
        "type":"text",
        "id": "p-text",
        "label": "paragraph text",
        "default": "Pellentesque cras adipiscing tempus libero vel nullam mauris tellus. Aliquam ultrices tellus consequat amet,"
      },
      {
        "type": "text",
        "id": "cta-3",
        "label": "Titulo boton",
        "default": "Ver por Ocasi√≥n"
      },
      {
        "type": "collection_list",
        "id": "collection_list",
        "label": "Collections"
      }
    ],
    "presets": [
    {
      "name": "collection-list"
    }
  ]
  }
{% endschema %}
