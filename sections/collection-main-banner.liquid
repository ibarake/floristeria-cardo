<hero-banner>
  <div class="flor-1">
    {% render 'flor-1' %}
  </div>
  <div class="flor-2">
    {% render 'flor-2' %}
  </div>
  <div class="flor-3">
    {% render 'flor-3' %}
  </div>
  <inline-half-container class="left">
    <hero-title>
      <h1 class="titulo-1 hero-title">
        {{ section.settings['hero-title'] }}
      </h1>
      <p class="parrafo-2 hero-subtitle">
        {{ section.settings['hero-subtitle'] }}
      </p>
    </hero-title>
    <hero-buttons>
      {% if section.settings['cta-1'] != blank %}
        <a class="cta-link cta cta-1 subtitulo-3" href="{{ section.settings.link-1 }}">
          {{- section.settings['cta-1'] -}}
        </a>
      {% endif %}
      {% if section.settings['cta-2'] != blank %}
        <a class="cta-link cta cta-2 subtitulo-3" href="{{ section.settings.link-2 }}">
          {{- section.settings['cta-2'] -}}
        </a>
      {% endif %}
    </hero-buttons>
  </inline-half-container>
  <inline-half-container class="right">
    <products-container class="overflow-auto drag-scroll">
      {% for tag in section.blocks %}
        <a class="product-item" href="{{ tag.url }}">
          <product-card class="vertical">
            <img
              class="product-card-image {{ classes }}"
              src="{{ tag.image | img_url }}"
              alt="{{ tag.image.alt }}"
            >
            <card-product-info class="card-width">
              <product-card-title>
                <p class="parrafo-4 collection-tag">{{ tag['col-title'] }}</p>
                <p class="parrafo-1 card-product-title">{{ tag.title }}</p>
              </product-card-title>
              <card-footer>
                <p class="price parrafo-1">{{ tag.price | money_with_currency }}</p>
                <form action="/cart/add" method="post" id="product-form-{{ tag.id }}" class="atc-btn-form">
                  <input type="hidden" name="id" value="{{ tag.variants.first.id }}">
                  <button type="submit" name="add" class="card-add-to-cart">
                    {% render 'icon-cart' %}
                    <p class="subtitulo-5 atc-btn-text">
                      {{ atc-btn }}
                    </p>
                  </button>
                </form>
              </card-footer>
            </card-product-info>
          </product-card>
        </a>
      {% endfor %}
    </products-container>
  </inline-half-container>
</hero-banner>

{% schema %}
{
  "name": "main-collection-banner",
  "settings": [
    {
      "type": "html",
      "id": "hero-title",
      "label": "Titulo principal H1",
      "default": "¿No sabes cómo decirlo? <br> Dilo con Flores."
    },
    {
      "type": "collection",
      "id": "hero-collection",
      "label": "Collection"
    },
    {
      "type": "textarea",
      "id": "hero-subtitle",
      "label": "Hero subtitle",
      "default": "Pellentesque cras adipiscing tempus libero vel nullam mauris tellus. Aliquam ultrices tellus consequat amet,"
    },
    {
      "type": "text",
      "id": "add-to-cart-title",
      "label": "Titulo principal H1",
      "default": "Añadir al carrito"
    }, {
      "type": "text",
      "id": "cta-1",
      "label": "Titulo de boton con fondo",
      "default": "Ver por Ocasión"
    },
    {
      "type": "url",
      "id": "link-1",
      "label": "link boton sin fondo"
    },
    {
      "type": "text",
      "id": "cta-2",
      "label": "Titulo boton sin fondo",
      "default": "Contactanos"
    },
    {
      "type": "url",
      "id": "link-2",
      "label": "link boton sin fondo"
    }
  ],
  "blocks": [
    {
		"type": "tags",
		"name": "tags",
        "limit": 6,
		"settings": [
       {
         "type": "text",
         "id": "title",
         "label": "Tag title",
         "default": "Example"
       }, {
         "type": "text",
         "id": "col-title",
         "label": "Tag collection title",
         "default": "Example"
       },
          {
  "type": "image_picker",
  "id": "image_with_text_image",
  "label": "Image"
}
		]
	}
  ],
  "presets": [
  {
    "name": "main-collection-banner"
  }
]
}
{% endschema %}
