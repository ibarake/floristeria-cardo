<section class="#">
  <f>
    <p class="subtitulo-3" id="p-subtitle">
      {{ section.settings.arreglos-subtitle }}
    </p>
    <h1 class="titulo-1" id="p-title">
      {{ section.settings.arreglos-title }}
    </h1>
  </f>
  <container-products>
    {% for product in section.settings.collection.products limit:4 %}
        {% include 'product-card', hero-product: product, atc-btn: section.settings.button-text %}
    {% endfor %}
    <p class="subtitulo-2">
      {{ section.settings['subtitulo-fotos'] }}
    </p>
  </container-products>
</section>

{% schema %}
  {
    "name": "products faq",
    "settings": [
      {
        "type": "text",
        "id": "arreglos-title",
        "label": "Titulo",
        "default": "Lorem ipsum dolor sit amet"
      }, {
        "type": "text",
        "id": "arreglos-subtitle",
        "label": "Subtitulo",
        "default": "Arreglos Funebres"
      }, {
        "type": "collection",
        "id": "collection",
        "label": "collection"
      }
    ]
  }
{% endschema %}

<contacto>
  <cuadro></cuadro>
  <informacion>
    <h1 class="titulo-1">
      {{ section.settings.contact-title }}
    </h1>
    <p class="parrafo-1" id="parrafo-contacto">
      {{ section.settings.contact-subtitle }}
    </p>
    {% form 'customer' %}
      <datos>
        <input
          id="correo"
          placeholder="Tu correo"
          type="email"
          name="contact[email]">
        <input class="button-contacto" type="submit" value="{{ section.settings.button-title }}">
      </datos>
    {% endform %}
  </informacion>
</contacto>

{% schema %}
  {
    "name": "contacto",
    "settings": [
      {
        "type": "text",
        "id": "contact-title",
        "label": "Contactanos"
      }, {
        "type": "textarea",
        "id": "contact-subtitle",
        "label": "Subtitle"
      }, {
        "type": "text",
        "id": "button-title",
        "label": "Recibir informacion"
      }
    ]
  }
{% endschema %}