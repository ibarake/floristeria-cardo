<footer>
  <item class="info-marca">
    <img src="{{ settings.logo.src | img_url }}"alt="{{ settings.logo.alt }}">
    <p class="parrafo-3">{{ section.settings.descripcion-marca }}</p>
  </item>
  <menu class="item-menu">
    <h5 class="subtitulo-3">{{ section.settings.titulo-menu-1 }}</h5>
      <ul>
        {% for link in section.settings.menu-footer-1.links %}
        <li>
          <a href="{{ link.url }}" class="subtitulo-3">{{ link.title }}</a>
        </li>
        {% endfor %}
      </ul>
  </menu>
  <menu class="item-menu">
    <h5 class="subtitulo-3">{{ section.settings.titulo-menu-2 }}</h5>
      <ul>
        {% for link in section.settings.menu-footer-2.links %}
        <li>
          <a href="{{ link.url }}" class="subtitulo-3">{{ link.title }}</a>
        </li>
        {% endfor %}
      </ul>
  </menu>
  <item class="contact">
    <form>
      <input type="text">
      <label for=""></label>
      <button></button>
    </form>
  </item>
</footer>
{% schema %}
  {
    "name": "Custom footer",
    "settings": [
      {
        "type": "textarea",
        "id": "descripcion-marca",
        "label": "Descripción",
        "default": "Descripción"
      }, {
        "type": "text",
        "id": "titulo-menu-1",
        "default": "Titulo",
        "label": "Título"
      }, {
        "type": "link_list",
        "id": "menu-footer-1",
        "default": "footer",
        "label": "Selecciona el menú"
      }, {
        "type": "text",
        "id": "titulo-menu-2",
        "default": "Titulo",
        "label": "Título"
      }, {
        "type": "link_list",
        "id": "menu-footer-2",
        "default": "footer",
        "label": "Selecciona el menú"
      }
    ]
  }
{% endschema %}
</footer>
