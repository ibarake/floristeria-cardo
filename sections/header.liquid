<header>
  <img
    src="{{ settings.logo.src | img_url }}"
    alt="{{ settings.logo.alt }}"
    class="header-logo" />

  <nav class="navigation-menu">
    <ul>
      {% for link in section.settings.main-menu.links %}
        <li>
          <a href="{{ link.url }}" class="menu-link">
            {{ link.title }}
            {% if link.links %}
              {% render 'icon-arrow-down' %}
            {% endif %}
          </a>
          {% if link.links %}
            <div class="mega-menu">
              {% for mega_link in link.links %}
                <div class="mega-menu-item">
                  <p class="mega-menu-text">
                    {{ mega_link.title }}
                  </p>
                </div>
              {% endfor %}
            </div>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </nav>

  <button class="add-to-cart">
    {% render 'icon-cart' %}
    <p class="add-to-cart-text">Carrito</p>
  </button>
</header>


{% schema %}
  {
    "name": "header",
    "settings": [
      {
        "type": "link_list",
        "id": "main-menu",
        "label": "Menu principal del encabezado"
      }
    ]
  }
{% endschema %}