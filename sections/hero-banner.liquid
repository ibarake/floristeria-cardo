<hero-banner>
  <div class="flor-1">
    {% render 'flor-1' %}
  </div>
  <div class="flor-2">
    {% render 'flor-2' %}
  </div>
  <inline-half-container class="left">
    <h1 class="titulo-1 hero-title">
      {{ section.settings.hero-title }}
    </h1>
    <p class="parrafo-2">
      {{ section.settings.hero-subtitle }}
    </p>
    <hero-buttons>
      {% if section.settings.cta-1 != blank %}
        <button class="cta-1">{{ section.settings.cta-1 }}</button>
      {% endif %}
      {% if section.settings.cta-2 != blank %}
        <button class="cta-1">{{ section.settings.cta-2 }}</button>
      {% endif %}
    </hero-buttons>
  </inline-half-container>
  <inline-half-container class="right">
    <products-container class="overflow-auto">
      {% for hero-product in section.settings.hero-collection.products %}
        {% include 'product-card', hero-product: hero-product, atc-btn: section.settings.add-to-cart-title %}
      {% endfor %}
    </products-container>
  </inline-half-container>
</hero-banner>

{% schema %}
  {
    "name": "hero-banner",
    "settings": [
      {
        "type": "html",
        "id": "hero-title",
        "label": "Titulo principal H1",
        "default": "¿No sabes <br> cómo decirlo? <br> Dilo con Flores."
      },
      {
        "type": "collection",
        "id": "hero-collection",
        "label": "Collection"
      },
      {
        "type": "textarea",
        "id": "hero-subtitle",
        "label": "Hero subtitle",
        "default": "Pellentesque cras adipiscing tempus libero vel nullam mauris tellus. Aliquam ultrices tellus consequat amet,"
      },
      {
        "type": "text",
        "id": "add-to-cart-title",
        "label": "Titulo principal H1",
        "default": "Añadir al carrito"
      }, {
        "type": "text",
        "id": "cta-1",
        "label": "Titulo de boton con fondo",
        "default": "Ver por Ocasión"
      }, {
        "type": "text",
        "id": "cta-2",
        "label": "Titulo boton sin fondo",
        "default": "Contactanos"
      }
    ]
  }
{% endschema %}