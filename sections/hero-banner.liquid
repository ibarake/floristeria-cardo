<hero-banner>
  <inline-container>
    <h1 class="titulo-h1">
      {{ section.settings.hero-title }}
    </h1>
    <p class="parrafo-2">
      {{ section.settings.home_welcome_message }}
    </p>
  </inline-container>
  <inline-container>
    {% for hero-product in section.settings.hero-collection.products %}
      <image-container>
        <img src="{{ hero-product.featured_image | img_url }}" alt="{{ hero-product.featured_image.alt }}">
      </image-container>
    {% endfor %}
  </inline-container>
</hero-banner>

{% schema %}
  {
    "name": "hero-banner",
    "settings": [
      {
        "type": "text",
        "id": "hero-title",
        "label": "Titulo principal H1",
        "default": "¿No sabes cómo decirlo? Dilo con Flores."
      }, {
        "type": "collection",
        "id": "hero-collection",
        "label": "Collection"
      }, {
        "type": "textarea",
        "id": "home_welcome_message",
        "label": "Welcome message",
        "default": "Welcome to my shop!"
      }
    ]
  }
{% endschema %}