<section class="cart page-width">
<container-cart-item>
  <h1 class="titulo-4" id="title-cart">Mi carrito</h1>
  {% form 'cart', cart %}
    {% for item in cart.items %}
      <cart-item>
        <image class="cart-item-image">
          <img src="{{ item.image | img_url }}">
        </image>
        <item-info>
          <p class="parrafo-4 collection-tag">{{ item.product.collections[0].title }}</p>
          <h2 class="subtitulo-1">{{ item.product.title }}</h2>
          <cart-note class="subtitulo-5">
            {% render 'cart-note' %}
            {{ section.settings['cart-note'] }}
          </cart-note>
        </item-info>
        <quantity>
          <input type="button" value="-" class="button-minus" data-field="quantity">
          <input type="number" step="1" max="" value="1" name="quantity" class="quantity-field">
          <input type="button" value="+" class="button-plus" data-field="quantity">
        </quantity>
        <p class="price">{{ item.product.price | money_with_currency }}</p>
        <a href="{{ item.url_to_remove }}">{% render 'delete-cart' %}</a>
      </cart-item>
    {% endfor %}
  {% endform %}
  <add-combo>
    <title-add-combo>
      {% render 'button-plus' %}
      <p class="subtitulo-1" id="add-combo-title">
        {{ section.settings.agregar-combo }}
      </p>
    </title-add-combo>
</add-combo>
</container-cart-item>
<container-resumen>
  <met-pagos>
  <p class="subtitulo-2" id="pagos">Metodos de Pagos</p>
  <container-met-pagos>
  {% render 'cart-1' %}
  {% render 'cart-2' %}
  {% render 'cart-3' %}
  {% render 'cart-4' %}
  </container-met-pagos>
  </met-pagos>
  <cart-info>
    <summary>
      <summary-1>
      <p class="subtitulo-2">Resumen</p>
      {% for item in cart.items %}
        <summary-cart-item>
          <span id="df" class="parrafo-1">{{ item.product.title }}</span>
          <span class="subtitulo-2" id="precio-cart">{{ item.product.price | money_with_currency }}</span>
        </summary-cart-item>
      {% endfor %}
      </summary-1>
      <cart-total>
      <span class="subtitulo-2" id="subtotal-cart">Subtotal</span>
      <span>{{ item.product.item | money_with_currency }}</span>
    </cart-total>
    </summary>
  <button-cart name="Comprar" class="subtitulo-2">Realizar Compra</button-cart>
</container-resumen>
</section>
{% schema %}
{
  "name": "main cart",
  "settings": [
    {
      "type": "text",
      "id": "cart-note",
      "label": "Contenido del item env√≠os ",
      "default": "Agregar mensaje personalizado"
    },

    {
      "type": "text",
      "id": "agregar-combo",
      "label": "Agregar a tu Combo",
      "default": "Agregar a tu combo"
    }
  ]
}
{% endschema %}

