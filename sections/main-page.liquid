<section class="sobre-cardo">
  <container-flor1-2>
    {% render 'Flor1-2' %}
  </container-flor1-2>
  <container-flor2-3>
    {% render 'Flor2-3' %}
  </container-flor2-3>
  <main-container>
    <h1 class="titulo-1" id="title-1">
      {{ section.settings.title }}
    </h1>
    <p class="parrafo-1" id="parrafo-1">
      {{ section.settings.subtitle }}
    </p>
    <info-container>
      <gmail>
        <h5 class="titulo-5" id="tt">
          {{ section.settings.label-correo }}
        </h5>
        <p class="parrafo-1" id="pp">
          {{ section.settings.correo }}
        </p>
      </gmail>
      <phone>
        <h5 class="titulo-5" id="tt">
          {{ section.settings.label-numero }}
        </h5>
        <p class="parrafo-1" id="pp">
          {{ section.settings.numero }}
        </p>
      </phone>
      <address>
        <h5 class="titulo-5" id="tt">
          {{ section.settings.label-direccion }}
        </h5>
        <p class="parrafo-1" id="pp">
          {{ section.settings.direccion }}
        </p>
      </address>
    </info-container>
  </main-container>
  <information-container>
    <container-flor1-1>
        {% render 'Flor1-1' %}
    </container-flor1-1>
    <container-flor3-1>
        {% render 'Flor3-1' %}
    </container-flor3-1>
    <left-sobre>
        <img
        class="information-image"
        src="{{ section.settings.image | img_url }}"
        alt="{{ section.settings.image.alt }}">
    </left-sobre>
    <right-sobre>
      <h3 class="titulo-3" id="titulo-3">
        {{ page.title }}
      </h3>
      <p class="parrafo-1" id="parrafo-2">
        {{ page.content }}
      </p>
    </right-sobre>
  </information-container>
</section>

{% schema %}
  {
    "name": "sobre-cardo",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Titulo",
        "default": "Lorem ipsum dolor sit amet"
      },
      {
        "type": "textarea",
        "id": "subtitle",
        "label": "subtitle",
        "default": "Pellentesque cras adipiscing tempus libero vel nullam mauris tellus. Aliquam ultrices tellus consequat amet,"
      },
      {
        "type": "image_picker",
        "label": "image",
        "id": "image"
      },
      {
        "type": "text",
        "id": "label-correo",
        "label": "Label Correo",
        "default": "Correo"
      },
      {
        "type": "text",
        "id": "correo",
        "label": "Correo",
        "default": "Correo@gmail.com"
      },
      {
        "type": "text",
        "id": "label-numero",
        "label": "Label Numero",
        "default": "Numero"
      },
      {
        "type": "number",
        "id": "numero",
        "label": "Numero",
        "default": "3227060520"
      },
      {
        "type": "text",
        "id": "label-direccion",
        "label": "Label Direccion",
        "default": "Direccion"
      },
      {
        "type": "text",
        "id": "direccion",
        "label": "Direccion",
        "default": "Calle 98 # 18-21 Bogot√° D.C. - Colombia"
      }
    ]
  }
{% endschema %}