<section class="preguntas-frecuentes page-width">
  <container>
    <h5 class="subtitulo-3 s3" id="subtitulo-preguntas">
      {{ section.settings['subtitle-preguntas'] }}
    </h5>
    <h1 class="titulo-1 t1" id="titulo-preguntas">
      {{ section.settings['title-preguntas'] }}
    </h1>
  </container>
  <preguntas>
    {% for block in section.blocks %}
      <faq class="faq-container">
        <question class="FAQ-title subtitulo-3">
        {{ block.settings.FAQ-title }}
        {% render 'icon-arrow-right-dropdown' %}
        </question>
      <answer class="FAQ-text">
        {{ block.settings.FAQ-text }}
      </answer>
      </faq>
    {% endfor %}
  </preguntas>
</section>

{% schema %}
  {
    "name": "products faq",
    "settings": [
      {
        "type": "text",
        "id": "arreglos-title",
        "label": "Titulo",
        "default": "Lorem ipsum dolor sit amet"
      }, {
        "type": "text",
        "id": "arreglos-subtitle",
        "label": "Subtitulo",
        "default": "Arreglos Funebres"
      }, {
        "type": "collection",
        "id": "collection",
        "label": "collection"
      }, {
        "type": "text",
        "id": "button-text",
        "label": "Boton de texto",
        "default": "Añadir al carrito"
      }, {
			"type": "text",
			"id": "title-preguntas",
			"label": "Title section",
			"default": "Sobre Cardó"
		}, {
			"type": "text",
			"id": "subtitle-preguntas",
			"label": "subtitle-preguntas",
			"default": "preguntas frecuentes"
		}, {
      "type": "text",
      "id": "subtitulo-fotos",
      "label": "Ver Todos",
      "default": "Ver todos"
    }
	],
	"blocks": [
		{
			"type": "FAQ",
			"name": "FAQ",
      "limit": 5,
			"settings": [
        {
          "type": "text",
          "id": "FAQ-title",
          "label": "FAQ-title",
          "default": "Example"
        }, {
          "type": "text",
          "id": "FAQ-text",
          "label": "FAQ-text",
          "default": "Example"
        }
			]
		}
	],
   "presets": [
     {
       "name": "faq"
     }
   ]
  }
{% endschema %}