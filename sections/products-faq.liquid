<section class="arreglos-funebres">
  <container-arreglos>
    <p class="subtitulo-3">
      {{ section.settings.arreglos-subtitle }}
    </p>
    <h1 class="titulo-1">
      {{ section.settings.arreglos-title }}
    </h1>
  </container-arreglos>
  <div>
    {% for product in section.settings.collection.products %}
        {% include 'products-card', hero-product: product, atc-btn: section.settings.button-text %}
    {% endfor %}
  </div>
</section>

{% schema %}
  {
    "name": "products faq",
    "settings": [
      {
        "type": "text",
        "id": "arreglos-title",
        "label": "Titulo",
        "default": "Lorem ipsum dolor sit amet"
      }, {
        "type": "text",
        "id": "arreglos-subtitle",
        "label": "Subtitulo",
        "default": "Arreglos Funebres"
      }, {
        "type": "collection",
        "id": "collection",
        "label": "collection"
      }, {
        "type": "text",
        "id": "button-text",
        "label": "Boton de texto",
        "default": "AÃ±adir al carrito"
      }
    ]
  }
{% endschema %}