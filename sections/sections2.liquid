<section class="arreglos-funebres">
  <container-arreglos>
    <p class="subtitulo-3">
      {{ section.settings.arreglos-subtitle }}
    </p>
    <h1 class="titulo-1">
      {{ section.settings.arreglos-title }}
    </h1>
  </container-arreglos>
  <div>
    {% for hero-product in section.settings.hero-collection.products %}
      {% include 'product-card', hero-product: hero-product, atc-btn: section.settings.add-to-cart-title %}
    {% endfor %}
  </div>
</section>

{% schema %}
  {
    "name": "arreglos-funebres",
    "settings": [
      {
        "type": "text",
        "id": "arreglos-title",
        "label": "Titulo",
        "default": "Lorem ipsum dolor sit amet"
      }, {
        "type": "text",
        "id": "arreglos-subtitle",
        "label": "Subtitulo",
        "default": "Arreglos Funebres"
      }, {
        "type": "collection",
        "id": "hero-collection",
        "label": "Collection"
      }
    ]
  }
{% endschema %}