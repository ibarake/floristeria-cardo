{% stylesheet %}
/* Add the CSS directly or use asset_url to link to an external stylesheet */
.call-to-action {
  position: fixed;
  width: fit-content;
  height: auto;
  top: 80%;
  left: 30px;
  background: #FFFFFF;
  filter: drop-shadow(0px -4px 15px rgba(0, 0, 0, 0.08));
  z-index: 9999;
  display: flex;
  flex-direction: row-reverse;
  justify-content: space-around;
  align-items: center;
  border-radius: 12px;
  padding: 10px 20px;
  gap: 20px;
}

.call-to-action-button {
  padding: 10px 20px;
  gap: 10px;
  background: #2D9CDB;
  border-radius: 8px;
  color: #FFFFFF;
  font-weight: 500;
  font-size: 16px;
  line-height: 32px;
  text-align: center;
  height: fit-content;
  margin:auto;
}

.call-to-action-phone {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0px;
  gap: 8px;
}

.avatar {
  background: #E0B37F;
  border-radius: 50px;
}

.phone-icon {
  background: #FFFFFF;
}

@media only screen and (max-width: 768px) {
  .call-to-action {
    width: 100%;
    bottom: 0px !important;
    left: 0px;
    padding: 20px 0px;
    top: auto;
  }
  .call-to-action-button{
    margin: 0px;
  }
}
{% endstylesheet %}
<!-- Botón que abre el popup -->
<!-- Contenedor del Popup -->
<div id="popupOverlay" class="popup-overlay">
  <div class="popup-content">
    <span id="closePopup" class="popup-close">&times;</span>
    <h2>Antes de llamarnos, déjanos tus datos</h2>
    <form method="POST" action="/contact" id="popupForm">
      <input type="hidden" name="form_type" value="contact">
      <div class="form-group">
        <label for="name">Nombre:</label>
        <input type="text" id="name" name="contact[name]" placeholder="Tu nombre" required>
      </div>
      <div class="form-group">
        <label for="email">Correo:</label>
        <input type="email" id="email" name="contact[email]" placeholder="Tu correo electrónico" required>
      </div>
      <div class="form-group">
        <label for="phone">Teléfono:</label>
        <input type="tel" id="phone" name="contact[phone]" placeholder="Tu teléfono" required>
      </div>
        <input type="hidden" name="return_to" value="tel:3112085671">
      <button type="submit" class="form-submit">Enviar</button>
    </form>
  </div>
</div>

