{% stylesheet %}
/* Add the CSS directly or use asset_url to link to an external stylesheet */
.call-to-action {
  position: fixed;
  width: fit-content;
  height: auto;
  top: 50%;
  left: 0px;
  background: #FFFFFF;
  filter: drop-shadow(0px -4px 15px rgba(0, 0, 0, 0.08));
  z-index: 9999;
  display: flex;
  flex-direction: row-reverse;
  justify-content: space-around;
  align-items: center;
  border-radius: 12px;
  padding: 10px 20px;
  gap: 20px;
}

.call-to-action-button {
  padding: 10px 20px;
  gap: 10px;
  background: #2D9CDB;
  border-radius: 8px;
  color: #FFFFFF;
  font-weight: 500;
  font-size: 16px;
  line-height: 32px;
  text-align: center;
  height: fit-content;
  margin:auto;
}

.call-to-action-phone {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0px;
  gap: 8px;
}

.avatar {
  background: #E0B37F;
  border-radius: 50px;
}

.phone-icon {
  background: #FFFFFF;
}
{% endstylesheet %}

