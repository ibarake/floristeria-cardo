<collection-card>
  <img
    class="collection-card-image"
    src="{{ collection.product[0].featured_image | img_url }}"
    alt="{{ collection.product[0].featured_image.alt }}"
    width="256px"
    heigth="300px"
  >
  <p class="subtitulo-3 collection-card-title">
    {{ collection.title }}
    {% render 'icon-arrow-right-2' %}
  </p>
</collection-card>
