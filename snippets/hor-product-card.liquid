<hor-product-card class="horizontal">
  {% assign class = 'product-card-image ' | append: classes %}
  {{ hero-product | img_tag: hero-product.featured_image.alt, class, '222x222' }}
  <card-product-info class="card-width">
    <product-card-title>
      <p class="parrafo-4 collection-tag">{{ hero-product.collections[0].title }}</p>
      <p class="parrafo-1 hor-card-product-title">{{ hero-product.title }}</p>
      <p class="parrafo-2 truncate-32 card-description">{{ hero-product.description | strip_html }}</p>
    </product-card-title>
    <card-footer>
      <p class="price parrafo-1">{{ hero-product.price | money_with_currency }}</p>
      <form action="/cart/add" method="post" id="product-form-{{ hero-product.id }}" class="atc-btn-form">
        <input type="hidden" name="id" value="{{ hero-product.variants.first.id }}">
        <button type="submit" name="add" class="card-add-to-cart">
          {% render 'icon-cart' %}
          <p class="subtitulo-5 atc-btn-text">
            {{ atc-btn }}
          </p>
        </button>
      </form>
    </card-footer>
  </card-product-info>
</hor-product-card>
