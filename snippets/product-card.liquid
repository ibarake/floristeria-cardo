<product-card class="vertical">
  {% assign class = 'product-card-image ' | append: classes %}
  {{ hero-product | img_tag: hero-product.featured_image.alt, class, '300x256' }}
  <card-product-info class="card-width">
    <product-card-title>
      <p class="parrafo-4 collection-tag">{{ hero-product.collections[0].title }}</p>
      <p class="parrafo-1 card-product-title">{{ hero-product.title }}</p>
    </product-card-title>
    <card-footer>
      <p class="price parrafo-1">{{ hero-product.price | money }}</p>
      <form action="/cart/add" method="post" id="product-form-{{ hero-product.id }}" class="atc-btn-form">
        <input type="hidden" name="id" value="{{ hero-product.variants.first.id }}">
        <button type="submit" name="add" class="card-add-to-cart">
          {% render 'icon-cart' %}
          <p class="subtitulo-5 atc-btn-text">
            {{ atc-btn }}
          </p>
          <p class="subtitulo-5 atc-btn-text text-responsive">
            {{ atc-rsp }}
          </p>
        </button>
      </form>
    </card-footer>
  </card-product-info>
  <script>
    const titles = document.querySelectorAll('.card-product-title');

    titles.forEach(title => {
      // Check if the height of the element is 40px
      if (title.offsetHeight > 40 && title.offsetHeight > 70) {
        // Set the min-height to 50px
        title.style.minHeight = '50px';
      }
      if (title.offsetHeight > 71 && title.offsetHeight > 80) {
        // Set the min-height to 50px
        title.style.minHeight = '80px';
      }
    });
  </script>
</product-card>
